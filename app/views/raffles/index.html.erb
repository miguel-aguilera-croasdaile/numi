<div class="container index-body">
  <div class="row">
    <div class="index-left col-xs-hidden col-sm-hidden col-md-3 col-lg-3 col-xl-3">
      <div class="index-header">
        left
      </div>
    </div>
    <div class="index-right col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">
      <div class="index-header">
        Search <i class="fas fa-search"></i>
      </div>
      <br>
      <div class="row">
        <% @raffles.each do |r| %>
          <%= link_to raffle_path(r), class: "col-4" do %>
            <div class="card">
              <p> <%= r.name %> </p>
              <p> Ending on <%= r.end_date %> </p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
